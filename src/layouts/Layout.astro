---
import Container from './Container.astro';
import Header from './Header.astro';

interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Container>
			<Header />
			<main>
				<slot />
			</main>
		</Container>
	</body>
</html>

<style is:global>
	/* GLOBAL */
	@font-face {
		font-family: 'Space Grotesk';
		src: url('/fonts/SpaceGrotesk-Regular.ttf') format('truetype');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: 'Space Mono';
		src: url('/fonts/SpaceMono-Regular.ttf') format('truetype');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	:root {
		--sans-serif: 'Space Grotesk', sans-serif;
		--monospace: 'Space Mono', monospace;
		--white: rgb(255, 255, 255);
		--light-gray: rgb(246, 246, 246);
		--gray: rgb(236, 236, 236);
		--black: rgb(34, 34, 34);
		--black-80: rgba(34, 34, 34, .8);
		--black-60: rgba(34, 34, 34, .6);
		--black-40: rgba(34, 34, 34, .4);
		--black-20: rgba(34, 34, 34, .2);
		--black-10: rgba(34, 34, 34, .1);
		--red: rgb(227, 41, 0);
		--text-xs: 0.75rem;
		--text-small: 0.875rem;
		--text-base: 1rem;
		--text-medium: 1.25rem;
		--text-large: 1.5rem;
		--text-xl: 2.25rem;
		--text-xxl: 3rem;
	}

	@media screen and (max-width: 768px) {
		:root {
			--text-medium: 1.125rem;
			--text-large: 1.25rem;
			--text-xl: 1.875rem;
			--text-xxl: 2.25rem;
		}
  }

	html {
		font-family: var(--sans-serif);
		background: var(--light-gray);
		color: var(--black);
		font-size: var(--text-base);
	}

	/* RESET */
	*, *::before, *::after {
    box-sizing: border-box;
	}
	* {
			margin: 0;
	}
	html, body {
			height: 100%;
	}
	body {
			line-height: 1.5;
			-webkit-font-smoothing: antialiased;
	}
	img, picture, video, canvas, svg {
			display: block;
			max-width: 100%;
	}
	input, button, textarea, select {
			font: inherit;
	}
	p, h1, h2, h3, h4, h5, h6 {
			overflow-wrap: break-word;
	}
	button {
		background: none;
		color: inherit;
		border: none;
		padding: 0;
		font: inherit;
		cursor: pointer;
		outline: inherit;
	}
	a {
		text-decoration: none;
		color: var(--color-text);
	}
	ul {
		margin-block-start: 0px;
    margin-block-end: 0px;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
    padding-inline-start: 0px;
	}
</style>