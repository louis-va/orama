---
import Separator from "../components/common/Separator.astro"
import Heading from '../components/common/Heading.astro'

interface Props {
  title: string;
  num: string;
  id: string;
}

const { title, num, id } = Astro.props;
---

<section id={id}>
  <Separator />
  <div class="two-cols">
    <div class="left">
      <Heading id={num}>{title}</Heading>
    </div>
    <div class="right">
      <slot />
    </div>
  </div>
</section>

<style>
  section {
    margin-top: 8rem;
  }
  .two-cols {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 1.5rem;
  }
  .two-cols .left {
    grid-column: span 1 / span 1;
  }
  .two-cols .right {
    grid-column: span 3 / span 3;
  }

  @media screen and (max-width: 768px) {
    section {
      margin-top: 6rem;
    }
    .two-cols {
      gap: 3rem;
    }
		.two-cols .left {
      grid-column: span 4 / span 4;
    }
    .two-cols .right {
      grid-column: span 4 / span 4;
    }
  }

  @media screen and (max-width: 480) {
    section {
      margin-top: 4rem;
    }
  }
</style>