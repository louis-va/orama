---
import Separator from "../components/common/Separator.astro";
import Heading from "../components/common/Heading.astro";

interface Props {
	title: string;
	num: string;
	id: string;
}

const { title, num, id } = Astro.props;
---

<section id={id}>
	<Separator />
	<div class="two-cols">
		<div class="left">
			<Heading id={num}>{title}</Heading>
		</div>
		<div class="right">
			<slot />
		</div>
	</div>
</section>

<style>
	section {
		margin-top: 5rem;
		padding-top: 5rem;
	}
	.two-cols {
		display: grid;
		grid-template-columns: repeat(12, minmax(0, 1fr));
	}
	.two-cols .left {
		grid-column: span 3 / span 3;
	}
	.two-cols .right {
		grid-column: span 6 / span 6;
	}

	@media screen and (max-width: 960px) {
		.two-cols .left {
			grid-column: span 4 / span 4;
		}
		.two-cols .right {
			grid-column: span 8 / span 8;
		}
	}

	@media screen and (max-width: 768px) {
		.two-cols {
			gap: 3rem;
			grid-template-columns: repeat(4, minmax(0, 1fr));
		}
		.two-cols .left {
			grid-column: span 4 / span 4;
		}
		.two-cols .right {
			grid-column: span 4 / span 4;
		}
	}
</style>
