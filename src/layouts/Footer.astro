---
import Logo from "@components/common/Logo.astro"
---

<footer>
	<div class="legal">
		<span>Copyright Â© Orama, 2025</span>
		<span class="separator">/</span>
		<a href="/conditions" data-cursor="focus">CGV</a>
	</div>
	<a href="/" class="logo">
		<Logo />
	</a>
	<div class="contact">
		<a href="https://www.instagram.com/orama_prod/" target="_blank" data-cursor="focus">IG</a>
		<span class="separator">/</span>
		<a href="https://www.facebook.com/profile.php?id=100090062064406" target="_blank" data-cursor="focus">FB</a>
		<span class="separator">/</span>
		<a href="https://www.linkedin.com/company/orama-production/" target="_blank" data-cursor="focus">IN</a>
		<span class="separator">/</span>
		<a href="mailto:info@oramaprod.be" data-cursor="focus">EMAIL</a>
	</div>
</footer>

<style>
	footer {
		display: grid;
		grid-template-columns: 1fr auto 1fr;
		align-items: center;
		position: relative;
		margin-top: 10rem;
		width: 100%;
		padding-top: 1.5rem;
		padding-bottom: 3rem;
		font-size: var(--text-small);
		text-transform: uppercase;
		color: var(--foreground-60);
		border-top: 1px dashed var(--foreground-20);
		grid-template-areas: "legal logo contact";
	}
	.legal, .contact {
		display: flex;
		align-items: center;
		flex-wrap: wrap;
		gap: 0.5rem;
	}
	.legal {
		justify-self: start;
		grid-area: legal;
	}
	.contact {
		justify-self: end;
		grid-area: contact;
	}
	.logo {
		grid-column: 2;
		color: var(--foreground);
		width: 1.5rem;
		grid-area: logo;
	}
	.separator {
		font-size: var(--text-xs);
	}

	@media (max-width: 768px) {
		footer {
			display: grid;
			gap: 0.5rem;
			grid-template-columns: 1fr auto;
			grid-template-rows: auto auto;
			grid-template-areas:
				"legal logo"
				"contact logo";
			align-items: start;
		}
		.legal,
		.contact {
			justify-self: start;
		}
		.logo {
			grid-row: 1 / 3;
			align-self: end;
			justify-self: end;
			margin-bottom: 0.25rem;
		}
	}

	@media (max-width: 480px) {
		footer {
			margin-top: 7rem;
		}
	}
</style>
