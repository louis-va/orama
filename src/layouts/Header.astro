---
import { Image } from 'astro:assets';
import logo from "../assets/logo.svg";
---

<header>
  <div class="container">
    <nav>
      <div>
        <a href="/">
          <Image src={logo} alt="Logo Orama" class="logo" />
        </a>
      </div>
      <ul>
        <li><a href="/"><span class="dot"></span>Projets</a></li>
        <li><a href="/"><span class="dot"></span>Infos</a></li>
        <li><a href="/"><span class="dot"></span>Contact</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  header {
    position: fixed;
    width: 100%;
    background-color: var(--light-gray);
    z-index: 99;
    margin: auto;
  }
  .container {
    position: relative;
    width: 100%;
    max-width: 1440px;
    margin: auto;
    padding: 0rem 3rem;
    border-bottom: 1px solid var(--black-10);
    border-right: 1px solid var(--black-10);
    border-left: 1px solid var(--black-10);
  }
  @media screen and (max-width: 1440px) {
    .container {
      border-right: none;
      border-left: none;
    }
  }
  @media screen and (max-width: 768px) {
    .container {
      padding: 0rem 1.5rem;
    }
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 0;
  }
  nav .logo {
    width: 1.75rem;
    height: auto;
  }
  nav ul {
    display: flex;
    gap: 1.5rem;
    list-style-type: none;
  }
  nav ul a {
    font-size: var(--text-small);
    line-height: 100%;
    text-transform: uppercase;
    display: flex;
    align-items: center;
    gap: .35rem;
  }

  .dot {
    width: .35rem;
    height: .35rem;
    background-color: var(--black-10);
    border-radius: .35rem;
  }

  nav ul a:hover .dot {
    background-color: var(--red);
  }
</style>