---
import ProjectCard from './ProjectCard.astro'
import Separator from '../common/Separator.astro'
import Heading from '../common/Heading.astro'

// TEST
import thumbnail from '../../content/projects/cleone/thumbnail.jpg'
import preview from '../../content/projects/cleone/preview.gif'

const n = 3;
---

<section>
  <Separator />
  <Heading id="01">Nos projets</Heading>

  <div class="grid-container">
    <div class="overlay"></div>
    <div class="stripes-pattern"></div>
    <div class="projects" id="projects">
      <ProjectCard
        slug="cleone"
        title="Cléone"
        type="Théatre"
        thumbnail={thumbnail}
        preview={preview}
        position={{x: 10, y: 0}}
        id="03"
      />
      <ProjectCard
        slug="cleone"
        title="Cléone"
        type="Théatre"
        thumbnail={thumbnail}
        preview={preview}
        position={{x: 90, y: 50}}
        id="03"
      />
      <ProjectCard
        slug="cleone"
        title="Cléone"
        type="Théatre"
        thumbnail={thumbnail}
        preview={preview}
        position={{x: 40, y: 100}}
        id="03"
      />
    </div>
  </div>
</section>

<style define:vars={{ projectsNumber: n }}>
  section {
    margin-top: 1.5rem;
  }
  .grid-container {
    margin-top: 3rem;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    height: calc(var(--card-w)*var(--projectsNumber) + 2rem + 2rem*var(--projectsNumber));
    overflow: hidden;
    border: 1px solid var(--black-3);
    padding: 1rem;
    background-color: var(--black-3);
  }
  @media screen and (max-width: 768px) {
    .grid-container {
      padding: 1rem;
    }
  }

  .stripes-pattern {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: 30px 30px;
    background-image:
      linear-gradient(to right, var(--white) 26px, transparent 26px),
      linear-gradient(to bottom, var(--white) 26px, transparent 26px);
    background-position: center;
  }
  .overlay {
    position: absolute;
    z-index: 2;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    box-shadow: 0 0 3rem 3rem rgba(255,255,255,1) inset;
    -webkit-box-shadow: 0 0 2rem 2rem var(--white-50) inset;
    -moz-box-shadow: 0px 0px 35px 35px rgba(255,255,255,0.5) inset;
  }
  .projects {
    position: relative;
    z-index: 3;
    width: 100%;
    height: 100%;
  }

</style>