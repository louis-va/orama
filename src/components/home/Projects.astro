---
import ProjectCard from './ProjectCard.astro'
import Wrapper from '../../layouts/Wrapper.astro'
import Title from '../common/Title.astro'

// TEST
import thumbnail from '../../content/projects/cleone/thumbnail.jpg'
import preview from '../../content/projects/cleone/preview.gif'

const n = 3;
---

<Wrapper>
  <Title id={1}>Nos projets</Title>
</Wrapper>
<section>
  <div class="grid-container">
    <div class="dotted-grid"></div>
    <div class="overlay"></div>
    <div class="projects" id="projects">
      <ProjectCard
        slug="cleone"
        title="Cléone"
        type="Théatre"
        thumbnail={thumbnail}
        preview={preview}
        position={{x: 10, y: 0}}
        id="03"
      />
      <ProjectCard
        slug="cleone"
        title="Cléone"
        type="Théatre"
        thumbnail={thumbnail}
        preview={preview}
        position={{x: 90, y: 50}}
        id="03"
      />
      <ProjectCard
        slug="cleone"
        title="Cléone"
        type="Théatre"
        thumbnail={thumbnail}
        preview={preview}
        position={{x: 40, y: 100}}
        id="03"
      />
    </div>
  </div>
</section>

<style define:vars={{ projectsNumber: n }}>
  section {
    margin-top: 2rem;
    border-radius: .5rem;
    overflow: hidden;
  }
  .grid-container {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    height: calc(var(--card-w)*var(--projectsNumber) + 2rem + 2rem*var(--projectsNumber));
    background: #FFFFFF;
    padding: 2rem;
  }
  .dotted-grid {
    position: absolute;
    z-index: 1;
    width: 125%;
    height: 125%;
    background-image: radial-gradient(var(--gray) 2px, transparent 0);
    background-size: 35px 35px;
    background-position: center;
  }
  .overlay {
    position: absolute;
    z-index: 2;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    box-shadow: 0px 0px 35px 35px rgba(255,255,255,0.5) inset;
    -webkit-box-shadow: 0px 0px 35px 35px rgba(255,255,255,0.5) inset;
    -moz-box-shadow: 0px 0px 35px 35px rgba(255,255,255,0.5) inset;
  }
  .projects {
    position: relative;
    z-index: 3;
    width: 100%;
    height: 100%;
  }

  @media screen and (max-width: 768px) {
    .grid-container {
      padding: 1.25rem;
    }
  }
</style>